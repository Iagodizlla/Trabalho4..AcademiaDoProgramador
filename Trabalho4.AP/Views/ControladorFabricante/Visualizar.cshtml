@using Trabalho4.AP.ModuloFabricante;
@using Trabalho4.AP.Models;

@model VisualizarFabricantesViewModel;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Visualizar Fabricantes/Controle de Equipamentos</title>
</head>
<body>
    <h1>Controle de Equipamentos</h1>
    <h2>Visualizar Fabricantes</h2>

    <a href="/">Página Inicial</a>

    <ul>
        @foreach (DetalhesFabricanteViewModel f in Model.Registros)
        {
            <li>@f.ToString() | 
                <a href="/fabricantes/editar/@f.Id">Editar<a/> /
                <a href="/fabricantes/excluir/@f.Id">Excluir<a/>
            </li>
        }
    </ul>
</body>
</html>