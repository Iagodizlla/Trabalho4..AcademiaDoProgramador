@using Trabalho4.AP.ModuloFabricante;
@using Trabalho4.AP.Models;

@model EditarFabricanteViewModel;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Editar Fabricantes/Controle de Equipamentos</title>
</head>
<body>
    <h1>Controle de Equipamentos</h1>
    <h2>Editar de Fabricante</h2>

    <form method="post" action="/fabricantes/editar/@Model.Id">
        <label>Nome</label><br />
        <input type="text" name="nome" value="@Model.Nome"/>

        <br />

        <label>Email </label><br />
        <input type="text" name="email" value="@Model.Email"/>

        <br />

        <label>Telefone</label><br />
        <input type="text" name="telefone" value="@Model.Telefone"/>
        <hr />

        <button type="submit">Salvar</button>

    </form>
</body>
</html>