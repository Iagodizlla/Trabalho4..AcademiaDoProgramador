@using Trabalho4.AP.ModuloFabricante;
@using Trabalho4.AP.Models;

@model ExcluirFabricanteViewModel;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Excluir Fabricantes/Controle de Equipamentos</title>
</head>
<body>
    <h1>Controle de Equipamentos</h1>
    <h2>Excluir Fabricante</h2>
    <p>Quer realmente excluir o registro "@Model.Nome"?</p>

    <form method="post" action="/fabricantes/excluir/@Model.Id">
        <button type="submit">Excluir</button>
        <a href="/fabricantes/visualizar">Voltar</a>
    </form>
</body>
</html>