@using Trabalho4.AP.ModuloEquipamento;
@using Trabalho4.AP.Models;

@model VisualizarEquipamentosViewModel;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Visualizar Equipamentos/Controle de Equipamentos</title>
</head>
<body>
    <h1>Controle de Equipamentos</h1>
    <h2>Visualizar Equipamentos</h2>

    <a href="/">Página Inicial</a>

    <ul>
        @foreach (DetalhesEquipamentoViewModel e in Model.Registros)
        {
        <li>
            @e.ToString() |
            <a href="/equipamentos/editar/@e.Id">
                Editar<a /> /
            <a href="/equipamentos/excluir/@e.Id">Excluir<a />
        </li>
        }
    </ul>
</body>
</html>