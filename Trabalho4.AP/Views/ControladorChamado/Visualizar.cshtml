@using Trabalho4.AP.ModuloChamado;
@using Trabalho4.AP.Models;

@model VisualizarChamadosViewModel;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Visualizar Chamados/Controle de Equipamentos</title>

    <style>
        :root {
            --fundo-principal: #1e1e1e;
            --fundo-secundario: #2c2c2e;
            --cor-principal: #DB56EB;
            --cor-secundaria: #b084d1;
            --cor-borda: #3a3a3c;
        }

        body {
            margin: 0;
            background-color: var(--fundo-principal);
            color: white;
            font-family: 'Segoe UI', sans-serif;
        }

        a {
            text-decoration: none;
        }

        nav {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            justify-content: space-between;
            padding: 0 200px;
            background-color: var(--fundo-secundario);
            border-bottom: 1px solid var(--cor-borda);
        }

            nav > h2 {
                margin: 0;
            }

            nav > ul {
                display: flex;
                flex-wrap: wrap;
                gap: 30px;
                justify-content: center;
                padding-left: 0;
                list-style: none;
            }

        .link-navegacao {
            color: var(--cor-principal);
            text-decoration: none;
            font-weight: 500;
            font-size: 18px;
        }

            .link-navegacao:hover {
                color: var(--cor-secundaria);
            }

        header {
            padding: 0 200px;
        }

        main {
            /* padding: vertical horizontal; */
            /* padding: top right bottom left; */
            padding: 0 200px;
            display: flex;
            flex-wrap: wrap;
            gap: 4px;
        }

        .card {
            border: 1px solid var(--cor-borda);
            border-radius: 15px;
            padding: 0 10px;
            width: 350px;
            height: 249px;
            background-color: var(--fundo-secundario);
            transition: transform 0.2s ease, background-color 0.2s ease;
        }

            .card:hover {
                transform: scale(1.02);
                background-color: #3d3d42;
            }

            .card h3 {
                color: var(--cor-principal);
            }

            .card p {
                color: #ffffff;
            }

        .botoes-interacao {
            margin-top: 20px;
            margin-left: auto;
        }

            .botoes-interacao a[type="button"] {
                padding: 5px 10px;
                color: black;
                background-color: #b084d1;
                border: 1px solid #b084d1;
                border-radius: 9px;
            }
        /* Media query */
        @@media (max-width: 768px) {
            nav {
                padding: 20px;
                justify-content: center;
            }

            header {
                padding: 20px;
            }

            main {
                padding: 20px;
            }
        }

    </style>
</head>
<body>
    <nav>
        <h2>Controle de Equipamentos</h2>
        <ul>
            <li><a class="link-navegacao" href="/">Página Inicial</a></li>
            <li><a class="link-navegacao" href="/chamados/cadastrar">Cadastrar</a></li>
        </ul>
    </nav>

    <header>
        <h3>Visualizar Chamados</h3>
    </header>

    <main>
        @foreach (DetalhesChamadoViewModel c in Model.Registros)
        {
            <div class="card">
                <h3>@c.Titulo</h3>
                <p><strong>Id:</strong> @c.Id</p>
                <p><strong>Descricao:</strong> @c.Descricao</p>
                <p><strong>Equipamento:</strong> @c.NomeEquipamento</p>
                <p><strong>Data Abertura:</strong> @c.DataAbertura</p>

                <div class="botoes-interacao">
                    <a type="button" href="/chamados/editar/@c.Id">Editar</a>
                    <a type="button" href="/chamados/excluir/@c.Id">Excluir</a>
                </div>
            </div>
        }
    </main>
</body>
</html>